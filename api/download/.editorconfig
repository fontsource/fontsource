root = true

[*]
charset = utf-8
indent_size = 2
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{js,cjs,ts,tsx}]
quote_type = single

[*.{md, mdx}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.{yml,yaml,toml}]
indent_style = space
