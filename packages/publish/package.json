{
	"name": "@fontsource-utils/publish",
	"version": "0.3.0",
	"description": "Fontsource Publish CLI",
	"bin": {
		"fontsource-publish": "./dist/cli.mjs"
	},
	"scripts": {
		"build": "pkgroll --target=node14 && bun run ./scripts/add-hashbang.ts",
		"dev": "bun run build && bun ./dist/cli.mjs",
		"coverage": "vitest run --coverage",
		"test": "vitest",
		"prepublish": "bun run build",
		"format": "biome format --write .",
		"ci:format": "biome format .",
		"lint": "biome lint --write .",
		"ci:lint": "biome lint ."
	},
	"keywords": [],
	"author": "Ayuhito <hello@ayuhito.com>",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.6.0",
		"@npmcli/package-json": "^3.1.1",
		"cac": "^6.7.14",
		"consola": "^3.1.0",
		"defu": "^6.1.2",
		"dotenv": "^16.1.4",
		"execa": "^7.1.1",
		"fs-extra": "^11.1.0",
		"hash-wasm": "^4.9.0",
		"json-stringify-pretty-compact": "^4.0.0",
		"p-queue": "^7.4.1",
		"parse-git-config": "^3.0.0",
		"pathe": "^1.1.1",
		"picocolors": "^1.0.0",
		"semver": "^7.5.1"
	},
	"devDependencies": {
		"@types/folder-hash": "^4.0.2",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^20.7.1",
		"@types/parse-git-config": "^3.0.1",
		"@types/semver": "^7.5.0",
		"magic-string": "^0.30.0",
		"pkgroll": "^1.9.0",
		"typescript": "^5.2.2"
