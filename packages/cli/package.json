{
	"name": "@fontsource-utils/cli",
	"version": "0.4.0",
	"description": "Fontsource CLI",
	"bin": {
		"fontsource": "./dist/cli.mjs"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"node": {
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		},
		"default": {
			"require": {
				"types": "./dist/browser.d.cts",
				"default": "./dist/browser.cjs"
			},
			"import": {
				"types": "./dist/browser.d.mts",
				"default": "./dist/browser.mjs"
			}
		}
	},
	"scripts": {
		"build": "pkgroll --target=node18 && tsx ./scripts/add-hashbang.ts",
		"cli": "tsx ./src/cli.ts",
		"lint": "eslint . --fix",
		"coverage": "vitest run --coverage",
		"test": "vitest",
		"prepublish": "pnpm run build",
		"ci:lint": "eslint ."
	},
	"keywords": [
		"fontsource",
		"fonts",
		"google fonts"
	],
	"author": "Ayuhito <hello@ayuhito.com>",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.6.3",
		"@fontsource-utils/generate": "workspace:*",
		"cac": "^6.7.14",
		"consola": "^3.1.0",
		"dotenv": "^16.1.4",
		"fs-extra": "^11.1.1",
		"json-stringify-pretty-compact": "^4.0.0",
		"p-queue": "^7.4.1",
		"pathe": "^1.1.1",
		"picocolors": "^1.0.0"
	},
	"devDependencies": {
		"@ayuhito/eslint-config": "^0.6.2",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^20.7.1",
		"eslint": "^8.50.0",
		"google-font-metadata": "^5.2.1",
		"magic-string": "^0.30.0",
		"pkgroll": "^1.10.0",
		"sass": "^1.62.1",
		"tsx": "^3.12.7",
		"typescript": "^5.2.2"
	},
	"peerDependencies": {
		"google-font-metadata": "^5.2.1"
	},
	"files": [
		"dist/*"
	],
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/fontsource/fontsource/tree/main/utils/cli",
	"repository": {
		"type": "git",
		"url": "https://github.com/fontsource/fontsource.git",
		"directory": "utils/cli"
	}
}
