{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/coverage",
			"!**/dist",
			"!**/build",
			"!**/worker-configuration.d.ts",
			"!**/.react-router"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"css": {
		"formatter": {
			"enabled": false
		},
		"linter": {
			"enabled": false
		},
		"parser": {
			"cssModules": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"domains": {
			"react": "all"
		},
		"rules": {
			"recommended": true,
			"correctness": {
				"useUniqueElementIds": "off",
				"noUnknownMediaFeatureName": "off",
				"noUnknownProperty": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	}
}
