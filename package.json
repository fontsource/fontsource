{
	"name": "fontsource",
	"version": "5.1.0",
	"author": "Ayuhito <hello@ayuhito.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "bun --filter \"./packages/*\" run build",
		"coverage": "vitest run --coverage",
		"lint": "bun -r run lint",
		"test": "vitest",
		"format": "biome format --write .",
		"ci:format": "biome format .",
		"ci:lint": "bun -r run ci:lint",
		"ci:test": "CI=true bun --filter \"./packages/*\" run build && bun --filter \"./packages/*\" --workspace-concurrency 1 coverage",
		"ci:version": "changeset version",
		"ci:publish": "bun --filter \"./packages/*\" run build && bun --filter \"./packages/*\" publish",
		"ci:publish-api": "bun --filter \"./packages/*\" run build && bun --filter \"./api/*\" run deploy"
	},
	"dependencies": {
		"@biomejs/biome": "^1.8.3",
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@vitest/coverage-v8": "^0.34.4",
		"vitest": "^0.34.4"
	},
	"workspaces": ["packages/*", "api/*", "website"],
	"publishConfig": {
		"access": "public"
	}
}
